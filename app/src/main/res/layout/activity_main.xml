<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.trubitsyna.homework.ViewCardProfile
            style="?attr/materialCardViewElevatedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:buttonColor="@color/md_theme_dark_secondaryContainer"
            app:imageCounter="@integer/imageCount"
            app:postCounter="@integer/postCount"
            app:profileImage="@drawable/media"
            app:subscriberCounter="@integer/subscriberCount"
            app:subtitle="@string/test_profile_subtext"
            app:title="@string/test_profile_name"

            />

        <include
            layout="@layout/view_card_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp" />

        <include
            layout="@layout/view_card_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />
    </LinearLayout>
</ScrollView>