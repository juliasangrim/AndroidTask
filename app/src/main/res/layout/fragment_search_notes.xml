<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutToolbarBack"
        layout="@layout/layout_toolbar_back" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputSearchInput"
        style="?attr/textInputFilledDenseStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:helperTextEnabled ="false"
        app:endIconMode="clear_text"
        app:endIconDrawable="@drawable/ic_clean_input_24"
        app:startIconDrawable="@drawable/ic_search_20">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewListSearchNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>